n=int(input())
for I in range (n):
    m=input ()
    l=list(map(int, input(). split()))
    b=0
    v=1
    g=[]
    if len(l)==2:
        print (abs(l[0]-l[1]))
    else:
       while b!=len(l)-1:
           if v==len(l)-1:
                 g.append(abs(l[b]-l[v]))
                 b+=1
                 v=b+1
           else :    
                 g.append(abs(l[b]-l[v])) 
                 v+=1  
       print (min(g))   