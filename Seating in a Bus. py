n=int(input())
for f in range (n):
    b=int(input())
    c=list (map(int,input(). split()))
    ma=max(c)
    p=[0]*(ma+2)
    p[c[0]]=1
    y="YES"
    for I in range (1,len(c)):
        if p[c[I]-1]==0 and p[c[I]+1]==0:
            y='NO'
            break 
        else :
            p[c[I]]=1
            y="YES"
    print (y)       